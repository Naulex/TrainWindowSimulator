                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="30" Color="Black" />
                        </TextBlock.Effect></TextBlock>
                    <TextBox Background="WhiteSmoke" Margin="10 10 10 10"  x:Name="textBox1"></TextBox>

                    <DockPanel Margin="10 10 10 10">
                        <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="20" TextWrapping="Wrap">Подпись:
