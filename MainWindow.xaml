                            <RadialGradientBrush RadiusX="1" RadiusY="1" GradientOrigin="0.3, 0.3">
                                <GradientStop Color="LightBlue" Offset="0" />
                                <GradientStop Color="CadetBlue" Offset="1" />
                            </RadialGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Canvas>
        </DockPanel>


        <StackPanel x:Name="sky" >
            <!-- Небо изменяется по ключевым кадрам от дневного к ночному. тайминги подбирались вручную-->
            <StackPanel.Background>
                <SolidColorBrush Color="LightBlue" x:Name="MyAnimatedBrush" />
            </StackPanel.Background>
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames
                Storyboard.TargetProperty="Color"
                Storyboard.TargetName="MyAnimatedBrush"
                 FillBehavior="HoldEnd" RepeatBehavior="Forever">
                                <ColorAnimationUsingKeyFrames.KeyFrames>
                                    <SplineColorKeyFrame Value="DarkBlue" KeyTime="0:0:8" />
                                    <SplineColorKeyFrame Value="DarkBlue" KeyTime="0:0:16" />
                                    <SplineColorKeyFrame Value="LightBlue" KeyTime="0:0:24" />
                                    <SplineColorKeyFrame Value="LightBlue" KeyTime="0:0:32" />
                                    <SplineColorKeyFrame Value="DarkBlue" KeyTime="0:0:40" />
                                    <SplineColorKeyFrame Value="DarkBlue" KeyTime="0:0:48" />
                                    <SplineColorKeyFrame Value="LightBlue" KeyTime="0:0:56" />
                                    <SplineColorKeyFrame Value="LightBlue" KeyTime="0:1:4" />
                                </ColorAnimationUsingKeyFrames.KeyFrames>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>
        </StackPanel>

