        xmlns:local="clr-namespace:ProjectNaumov"
        mc:Ignorable="d"
        Title="Симулятор смотрения в окно поезда HD720p60fps" Height="720" Width="1280" ResizeMode="NoResize" Icon="pack://application:,,,/Resources/ico.ico">
    <!-- Иконка упакована в ресурсы, так к ней проще обращаться -->

    <Window.Resources>
        <!--Для анимации объектов за окном используются два пути: один для облаков, другой для объектов на земле. Они описаны ниже-->
        <PathGeometry x:Key="geometryPath">
            <PathFigure IsClosed="False" StartPoint="1500,-10">
                <PolyLineSegment Points="-300,-10" />
            </PathFigure>
        </PathGeometry>

        <PathGeometry x:Key="land">
            <PathFigure IsClosed="False" StartPoint="0, 0">
                <PolyLineSegment Points="-10000 0" />
            </PathFigure>
        </PathGeometry>
    </Window.Resources>
